# MAG MCP Server Configuration

# Ollama Configuration
MAG_OLLAMA_HOST=http://localhost:11434
MAG_EMBEDDING_MODEL=nomic-embed-text
MAG_LLM_MODEL=codestral

# Codebase Configuration
MAG_CODEBASE_ROOT=/path/to/your/csharp/project

# ChromaDB Configuration
MAG_CHROMA_PERSIST_DIR=./data/chroma
MAG_CHROMA_COLLECTION_NAME=csharp_codebase

# Indexing Configuration
MAG_CHUNK_SIZE_TOKENS=512
MAG_CHUNK_OVERLAP_TOKENS=50
MAG_MAX_WORKERS=4

# Search Configuration
MAG_DEFAULT_SEARCH_RESULTS=5
MAG_SIMILARITY_THRESHOLD=0.7

# File Filtering
MAG_FILE_EXTENSIONS='[".cs"]'
MAG_EXCLUDE_PATTERNS='["**/obj/**", "**/bin/**", "**/packages/**", "**/.vs/**"]'

# Logging
MAG_LOG_LEVEL=INFO
